import static javax.swing.JOptionPane.*;

public class Serova {
    public static void main(String[] args) {
        int now = 2025, age, year;
        String num, msg = "You are: ";
        
        // Eingabeaufforderung f√ºr das Geburtsjahr
        num = showInputDialog(null, "Enter your year of birth: ", "Determine your age", QUESTION_MESSAGE);
        
        // Umwandlung der Eingabe in eine Ganzzahl
        year = Integer.parseInt(num);
        
        // Berechnung des Alters
        age = now - year;
        
        // Altersanzeige
        showMessageDialog(null, msg + age + " years old", "Age determined", INFORMATION_MESSAGE);
    }
}

